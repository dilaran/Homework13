<h1>In-da-Burger</h1>

<h2>new burger</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">add?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured<br>
    <input type="radio" name="devoured" value="0">new burger
  </div>

  <button type="submit">Add burger</button>
</form>
